<h1>Tarjetas de tiempo</h1>
<table class='table table-bordered'>
		<tr class='info'>
		  <th><center>Carnet</center></th>
		  <th><center>Fecha</center></th>
		  <th><center>Hora de Ingreso</center></th>
		  <th><center>Hora de Salida</center></th>
		  <th></th>
		</tr>

		<% @tarjetas.each do |tarjeta| %>
		  <tr class='active'>
		    <td><center><%= tarjeta.id_empleado %></center></td>
		    <td><center><%= tarjeta.fecha %></center></td>
		    <td><center><%= tarjeta.hora_ingreso %></center></td>
		    <td><center><%= tarjeta.hora_salida %></center></td>
		    <td><a href="/eliminar_tt/<%= empleado.ci%>"><center>Eliminar</center></a></td>
		  </tr>
		<% end %>
</table>
<a href="/show/<%= @empleado.ci%>" class="btn btn-primary"><center>Volver</center></a>